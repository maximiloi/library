mixin selectionRadio(data)
  input.selection__input(
    type='radio',
    name= data.name,
    value= data.value,
    checked= data.checked,
    id= data.value
  )
  if data.checked
    label.selection__label.active(
      for= data.value
    )= data.value
  else 
    label.selection__label(
      for= data.value
    )= data.value

mixin generationBook(data)
  li.books__item
    h3.books__title Staff Picks
    h4.books__name= data.name
    h4.books__author= data.author
    p.books__description= data.description
    img.books__img(src= data.img, alt=`${data.name} ${data.author} cover`)
    if data.buy === 'own'
      button.books__button.books__own= data.buy
    else
      button.books__button= data.buy

section.favorites
  .favorites__container
    h2.favorites__title._underline favorites
    p.favorites__text Pick favorites of season
    .favorites__selection.selection
      +selectionRadio({name: 'favorites', value: 'Winter', checked: true})
      +selectionRadio({name: 'favorites', value: 'Spring', checked: false})
      +selectionRadio({name: 'favorites', value: 'Summer', checked: false})
      +selectionRadio({name: 'favorites', value: 'Autumn', checked: false})
